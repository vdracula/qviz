from pydantic import BaseSettings


class Settings(BaseSettings):
    bot_token: str
    yandex_api_key: str  # API-ключ или IAM-токен
    yandex_folder_id: str  # каталог в Yandex Cloud
    yandex_endpoint: str = "https://ai.api.cloud.yandex.net/v1/chat/completions"

    class Config:
        env_file = ".env"


settings = Settings()
